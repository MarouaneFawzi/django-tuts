pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                checkout scm
            }
        }
        stage('create/activate venv') {
            steps {
                sh '''
                #!/bin/bash
                cd mysite
                virtualenv venv
                . venv/bin/activate
                pip3 install -r requirements.txt
                python manage.py makemigrations
                python manage.py migrate
                python manage.py seed polls
                python manage.py test polls
                ''' 
            }
        }
}
}
